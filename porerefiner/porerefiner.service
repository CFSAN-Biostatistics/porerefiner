[Unit]
Description=PoreRefiner nanopore management service
After=network.target

[Service]
Type=simple
# Another Type: forking
User=porerefiner
Group=porerefiner
WorkingDirectory=/home/porerefiner
ExecStart=python3 -m porerefiner.porerefiner start --config $POREREFINER_CONFIG
Restart=on-failure
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=user.target
